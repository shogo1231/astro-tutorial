---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// const pageTitle = "ホームページ_定数";
// チュートリアルの各コンポーネントにpageTitleを書く処理が実用的ではないので、ベースとなるこのファイルで初期値設定をさせてみる
// astro.propsのObj型の中に、それぞれのプロパティが入っているので次のようにしてみる
const astroProps = {
	pageTitle: Astro.props.pageTitle ?? "ホームページ_定数",
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{astroProps.pageTitle}</title>
	</head>
	<body>
		<Header />
		<h1>{astroProps.pageTitle}</h1>
		<slot />
		<Footer />
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
